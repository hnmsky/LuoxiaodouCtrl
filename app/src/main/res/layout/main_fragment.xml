<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">


    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="16dp"
        android:text="Push"
        app:layout_constraintStart_toEndOf="@+id/btn_connect"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_connect" />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Right"
        app:layout_constraintStart_toEndOf="@+id/btn_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_publish" />

    <Button
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="Forward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_left" />

    <Button
        android:id="@+id/btn_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Backward"
        app:layout_constraintStart_toEndOf="@+id/btn_forward"
        app:layout_constraintTop_toBottomOf="@+id/btn_right" />

    <Button
        android:id="@+id/btn_headup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="HeadUp"
        app:layout_constraintTop_toBottomOf="@+id/btn_forward"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_headup_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="HEADUP+1"
        app:layout_constraintStart_toEndOf="@+id/btn_headup"
        app:layout_constraintTop_toBottomOf="@+id/btn_backward" />

    <Button
        android:id="@+id/btn_headdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Headdown"
        app:layout_constraintTop_toBottomOf="@+id/btn_headup"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_headdown_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="headdown+1"
        app:layout_constraintStart_toEndOf="@+id/btn_headdown"
        app:layout_constraintTop_toBottomOf="@+id/btn_headup_step" />

    <Button
        android:id="@+id/btn_headleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="headleft"
        app:layout_constraintTop_toBottomOf="@+id/btn_headdown"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btn_headleft_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="headleft+1"
        app:layout_constraintStart_toEndOf="@+id/btn_headleft"
        app:layout_constraintTop_toBottomOf="@+id/btn_headdown_step" />

    <Button
        android:id="@+id/btn_headright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="headright"
        app:layout_constraintTop_toBottomOf="@+id/btn_headleft"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btn_headright_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="headright+1"
        app:layout_constraintStart_toEndOf="@+id/btn_headright"
        app:layout_constraintTop_toBottomOf="@+id/btn_headleft_step" />

    <Button
        android:id="@+id/btn_handup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="handup"
        app:layout_constraintTop_toBottomOf="@+id/btn_headright"
        tools:layout_editor_absoluteX="23dp" />

    <Button
        android:id="@+id/btn_handdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="3dp"
        android:text="handdown"
        app:layout_constraintStart_toEndOf="@+id/btn_handup"
        app:layout_constraintTop_toBottomOf="@+id/btn_headright_step" />

    <Button
        android:id="@+id/btn_shoulderup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="shoulderup"
        app:layout_constraintTop_toBottomOf="@+id/btn_handup"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/btn_shoulderdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="shoulderdown"
        app:layout_constraintStart_toEndOf="@+id/btn_shoulderup"
        app:layout_constraintTop_toBottomOf="@+id/btn_handdown" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="reset"
        app:layout_constraintTop_toBottomOf="@+id/btn_shoulderup"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/btn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="OFF"
        app:layout_constraintStart_toEndOf="@+id/btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/btn_shoulderdown" />
</androidx.constraintlayout.widget.ConstraintLayout>